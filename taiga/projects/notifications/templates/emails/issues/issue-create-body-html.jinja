{% extends "emails/base-body-html.jinja" %}

{% block body %}
    {% trans signature=sr("signature"), user=user.get_full_name(), changer=changer.get_full_name(), project=project.name, ref=snapshot.ref, subject=snapshot.subject, url=resolve_front_url("issue", project.slug, snapshot.ref) %}
    <h1>New issue created on {{ project }}</h1>
    <p>Hello {{ user }},<br />{{ changer }} has created a new issue:</p>
    <p><strong>#{{ ref }} {{ subject }}</strong></p>
    <a class="button" href="{{ url }}" title="See Issue #{{ ref }} {{ subject }}">See issue</a>
    <p><small>{{ signature }}</small></p>
    {% endtrans %}
{% endblock %}
